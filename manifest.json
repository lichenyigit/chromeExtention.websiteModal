{
  "name": "流媒体网站字幕遮幕",
  "version": "1.0.17",
  "description": "流媒体网站字幕遮幕",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "切换字幕遮幕"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youku.com/*",
        "https://*.iqiyi.com/*",
        "https://*.qq.com/*",
        "https://*.bilibili.com/*",
        "https://*.youtube.com/*",
        "https://*.vidhub.me/*",
        "https://*.douyin.com/*",
        "https://*.jjwu.net/*",
        "https://*.toutiao.com/*",
        "https://*.vidhub1.cc/*",
        "https://*.ixigua.com/*",
        "https://*/*"
      ],
      "js": [
        "content/js.js"
      ],
      "css": [
        "content/css.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}